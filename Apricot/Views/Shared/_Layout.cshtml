<!DOCTYPE>
<html lang="en">
@{
    CurrentPage currentPage = ViewBag.CurrentPage;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Apricot</title>

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/Content/lib/bootstrap-5.2.0-beta1/scss/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!--optional head addon-->
    @RenderSection("head", required: false)
    <style>
        html {
            font-size: 20px;
        }
        body {
            background-color: var(--bs-dark);
        }

        .btn {
            border-radius: 50rem;
        }

        .fill {
            height: 87%;
        }

        .scroller {
            scrollbar-width: thin;
        }

        ::-webkit-scrollbar {
            height: 4px;
            width: 4px;
            background: #000;
        }

        

        ::-webkit-scrollbar-thumb {
            background: var(--bs-dark);
            -webkit-border-radius: 1ex;
            -webkit-box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.75);
        }

        ::-webkit-scrollbar-corner {
            background: #000;
        }


    </style>


</head>

<body>
    @*<div id="load"> // loading animation div

    </div>*@


    <div class=" sticky-top ">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100 pb-2 pt-2 border-bottom border-dark">
            <div class="container-fluid">
                <div class=" navbar-brand text-primary ms-4 d-flex align-items-center" style="font: Saira; font-weight: bolder; font-size: 1.5rem; cursor: pointer; -webkit-user-select: none; /* Safari */ -ms-user-select: none; /* IE 10 and IE 11 */ user-select: none; /* Standard syntax */" onclick="window.location.href = '@Url.Action("Index","Home")'">
                    <img class="me-2" src="~/Content/apricot.svg" height="40" width="40" />
                    <!--<span class="dot bg-primary me-2" style="height:45px; width:45px"></span>-->
                    APRICOT
                </div>
                <div class="collapse navbar-collapse d-flex align-items-center text-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link @SetActiveNavbarIcon(currentPage, CurrentPage.Home) rounded-0" aria-current="page" data-bs-toggle="tooltip" data-bs-placement="right">
                                <div class="nav-link-text text-primary">Home</div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Privacy")" class="nav-link rounded-0 @SetActiveNavbarIcon(currentPage, CurrentPage.About)" data-bs-toggle="tooltip" data-bs-placement="right">
                                <div class="text-primary nav-link-text">About</div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Privacy")" class="nav-link rounded-0 @SetActiveNavbarIcon(currentPage, CurrentPage.About)" data-bs-toggle="tooltip" data-bs-placement="right">
                                <div class="text-primary nav-link-text">Contact Support</div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class=" d-flex align-items-center text-center float-end pb-0 me-4">
                    <ul class="navbar-nav">
                    <li class="nav-item me-4">
                            <a href="@Url.Action("Login")" class="nav-link rounded-0 @SetActiveNavbarIcon(currentPage, CurrentPage.About)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <div class="text-primary nav-link-text">Login</div>
                        </a>
                    </li>
                        <li class="nav-item border border-primary ps-4 pe-4" style="border-style: dotted !important">
                            <a href="@Url.Action("SignUp")" class="nav-link rounded-0 @SetActiveNavbarIcon(currentPage, CurrentPage.About)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <div class="text-primary  nav-link-text">Sign Up</div>
                        </a>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

        <div id="contents">
            @RenderBody()
        </div>
    

    <script src="~/Content/lib/bootstrap-5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/jquery-3.6.0/jquery-3.6.0.min.js"></script>
    <script src="~/Content/lib/just-validate-3.8.1/just-validate.production.min.js"></script>
    <script>


            //document.onreadystatechange = function () {
            //    var state = document.readyState
            //    if (state == 'interactive') {
            //    } else if (state == 'complete') { // checks if the page state is loaded
            //        document.getElementById('interactive');
            //        //$('#load').hide(); // hides the loading animation
            //        $("#contents").show(); // shows RenderBody()
            //    }

            //}
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>



@{
    string SetActiveNavbarIcon(Apricot.Models.CurrentPage? current, Apricot.Models.CurrentPage target)
    {
        if (current.HasValue && current == target)
        {
            return "active";
        }
        return string.Empty;
    }
}

