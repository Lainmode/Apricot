<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Station Seen - Begin your journey</title>
    <link rel="icon" type="image/x-icon" href="~/Content//assets/img/favicon.ico" />

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/Content/lib/bootstrap-5.2.0-beta1/scss/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/select2/select2.min.css">
    <link href="~/Content/site.css" rel="stylesheet" />
    <link rel="manifest" href="/manifest.json">
    <!-- END GLOBAL MANDATORY STYLES -->
    <!--optional head addon-->
    @RenderSection("head", required: false)


</head>

<body>
    @*<div id="load"> // loading animation div

        </div>*@


<div class="@navbarMargin sticky-top ">
    <nav class="navbar navbar-expand-lg navbar-light bg-white w-100 pb-0 pt-0 border-bottom">
        <div class="container-fluid">
            <div class="navbar-brand text-primary ms-4 d-flex align-items-center" style="font: Saira; font-weight: bolder; font-size: 1.5rem; cursor: pointer; -webkit-user-select: none; /* Safari */ -ms-user-select: none; /* IE 10 and IE 11 */ user-select: none; /* Standard syntax */" onclick="window.location.href = '@Url.Action("Index","Home")'">
                <img class="me-2" src="~/Content/assets/img/logo_b_no_title.png" height="40" width="40" />
                <!--<span class="dot bg-primary me-2" style="height:45px; width:45px"></span>-->
                STATION S
            </div>
            <div class="collapse navbar-collapse d-flex align-items-center text-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Home")" class="nav-link @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Start) rounded-0" aria-current="page" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="home"></i>
                            <div class="nav-link-text">Home</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Profiles", new { id = CurrentUser.ID })" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.MyProfile)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="user"></i>
                            <div class="nav-link-text">Profile</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Partners")" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Team)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="share-2"></i>
                            <div class="nav-link-text">Projects</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Invite", "Invitations")" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Invite)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="user-plus"></i>
                            <div class="nav-link-text">Invite</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("AddProject", "Team")" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.NewProject)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="plus"></i>
                            <div class="nav-link-text">Project</div>
                        </a>
                    </li>
                </ul>
                <form class="d-flex mb-0 input-group nav-form">
                    <input class="form-control bg-light" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-light  border-opacity-25 border " type="submit">
                        <i data-feather="search"></i>
                    </button>
                </form>
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a href="#" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Messages)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="mail"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link  rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Notifications)" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i data-feather="bell"></i>
                        </a>
                    </li>
                    @*<li class="nav-item">
                            <a href="#" class="nav-link  rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Help)" data-bs-toggle="tooltip" data-bs-placement="right">
                                <i data-feather="help-circle"></i>
                                <div class="nav-link-text">Help</div>
                            </a>
                        </li>*@
                    @if (CurrentUser.UserType == UserType.Admin)
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Users")" class="nav-link rounded-0 @SeenHelpers.SetActiveNavbarIcon(LayoutVM.ActiveIcon, LayoutNavbarIcons.Admin)" data-bs-toggle="tooltip" data-bs-placement="right">
                                <i data-feather="tool"></i>
                                <div class="nav-link-text">Admin</div>
                            </a>
                        </li>
                    }

                </ul>
            </div>
            <div class="dropdown float-end pb-0 me-4">
                <a href="#" class="d-flex align-items-center justify-content-center pb-1 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@CurrentUser.GetImageUrl(this)" alt="mdo" width="54" height="54" class="rounded-circle border">
                </a>
                <ul class="dropdown-menu text-small shadow  dropdown-menu-end" style="width:18rem !important;" aria-labelledby="dropdownUser3">
                    <li class="dropdown-item-text">
                        <h6 style="font-weight:bold;">
                            @CurrentUser.GetFullName()
                        </h6>
                        <h6>
                            @CurrentUser.Email
                        </h6>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    @*<li><a class="dropdown-item" href="#">New project...</a></li>*@
                    <li><a class="dropdown-item text-primary" href="@Url.Action("Index", "AccountSettings")">Settings</a></li>
                    <li><a class="dropdown-item text-primary" href="@Url.Action("Index","Profiles", new { ID = CurrentUser.ID })">Profile</a></li>
                    <li><a class="dropdown-item text-primary" href="@Url.Action("Index", "ContactSupport")">Report a problem</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-primary" href="@Url.Action("Logout", "System")">Sign out</a></li>
                </ul>
            </div>
        </div>
    </nav>
</div>
@if (!ViewBag.PageName.Contains("Profiles") && !ViewBag.PageName.Contains("Team"))
{
    <div class="container" id="contents">
        @RenderBody()
    </div>
}
else
{
    <div id="contents">
        @RenderBody()
    </div>
}

