<div class="container fill d-flex justify-content-center">
    <div class="text-center align-items-center text-light mb-auto mt-auto w-50">
        <div class="card card-body border-primary border rounded bg-black">
            <h4 class="text-center text-primary mb-4">Sign Up</h4>
            <form method="post" action="@Url.Action("SignUp")">
                <div class="me-4 ms-4">
                    <input class="form-control mb-4" type="text" placeholder="Username" />
                    <input class="form-control mb-4" type="email" placeholder="Email Address" />
                    <input class="form-control mb-4" type="password" placeholder="Password" />
                    <input class="form-control mb-4" type="password" placeholder="Confirm Password" />
                    <div class="mb-2" style="text-align:start">
                        <input class="form-check-input" type="checkbox" value="" id="policy">
                        <label class="form-check-label" for="policy">
                            I agree to the platform's privacy policy
                        </label>
                    </div>
                    <div class="mb-5" style="text-align:start">
                        <input class="form-check-input" type="checkbox" value="" id="random">
                        <label class="form-check-label" for="random">
                            I am a Student
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary w-75 text-light" style="font-size: 1.5rem;">Sign Up</button>
            </form>
        </div>


    </div>
</div>
