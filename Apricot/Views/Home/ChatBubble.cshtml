@model Apricot.Controllers.ChatToken;

@{
    Layout = null;
}
@foreach(var item in Model.Chats) {
    <div class="d-flex align-items-center mb-3">
        @if (item.UserID == Model.User.ID)
    {
                    <div class="circle bg-primary me-4 d-flex">
                    </div>
        <h6 class="mb-0 bg-primary p-2 pe-3 ps-2 rounded">@item.Text</h6>

    }

    else
    {
        <div class="circle  me-4 d-flex">
                </div>
        <h6 class="mb-0 bg-dark border-secondary border p-2 pe-3 ps-2 rounded">@item.Text</h6>
    }
        </div>
}
