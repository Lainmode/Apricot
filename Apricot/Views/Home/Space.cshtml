        checkNewMsgs();
    });

    function checkNewMsgs() {
        try {
       
            updateScroll();
            var done = true;
        sleep(2000);
        interval2 = setInterval(function () {
            if (done) {
                done = false;

                $.ajax({
                    method: "post",
                    url: "CheckNewMessages",
                    data: { lastChatId: lastChatId2, userId: @userId, channelId: @channelId2 },
